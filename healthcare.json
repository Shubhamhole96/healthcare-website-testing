			<div class="container" ng-app="ShoppingApp" ng-controller="ProductController as pCtrl">

				<div class="row" ng-init="pCtrl.fetchProducts()">

					<div class="col-md-3">
						<p class="lead">Categories</p>




						<div class="list-group">



							<a href="/medicare/show/category/1/products" class="list-group-item"
								id="a_Antipyretics">Antipyretics</a>

							<a href="/medicare/show/category/2/products" class="list-group-item"
								id="a_Analgesics">Analgesics</a>

							<a href="/medicare/show/category/3/products" class="list-group-item"
								id="a_Antibiotics">Antibiotics</a>



						</div>
					</div>

					<div class="col-md-9">

						<div class="row carousel-holder">

							<div class="col-md-12">
								<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
									<ol class="carousel-indicators">
										<li data-target="#carousel-example-generic" data-slide-to="0" class="active">
										</li>
										<li data-target="#carousel-example-generic" data-slide-to="1"></li>
										<li data-target="#carousel-example-generic" data-slide-to="2"></li>
										<li data-target="#carousel-example-generic" data-slide-to="3"></li>
									</ol>
									<div class="carousel-inner">

										<div class="item active">
											<img class="slide-image" src="/medicare/resources/images/banner1.jpg"
									alt="">
							</div>
											<div class="item">
												<img class="slide-image" src="/medicare/resources/images/banner2.jpg"
									alt="">
							</div>
												<div class="item">
													<img class="slide-image" src="/medicare/resources/images/banner3.jpg"
									alt="">
							</div>
													<div class="item">
														<img class="slide-image" src="/medicare/resources/images/banner4.jpg"
									alt="">
							</div>
													</div>
													<a class="left carousel-control" href="#carousel-example-generic"
														data-slide="prev"> <span
							class="glyphicon glyphicon-chevron-left"></span>
													</a> <a class="right carousel-control"
														href="#carousel-example-generic" data-slide="next"> <span
							class="glyphicon glyphicon-chevron-right"></span>
													</a>
												</div>
											</div>

										</div>

										<div class="row">
											<div class="col-xs-12">
												<h3>Most Viewed Medicines</h3>
												<hr />
											</div>
										</div>

										<div class="row is-table-row">

											<div class="col-sm-4" ng-repeat="product in pCtrl.mvProducts">
												<div class="thumbnail card-layout">
													<img ng-src="/medicare/resources/images/{{product.code}}.jpg" alt="{{product.name}}" class="landingImg">
													<h5>{{product.name}}</h5>
													<hr />
													<div class="caption">
														<h4 class="pull-right">&#8377; {{product.unitPrice}}</h4>
														<p>{{product.description}}</p>
														<a ng-href="/medicare/show/{{product.id}}/product"
															class="btn btn-primary pull-right">View</a>
													</div>
												</div>

											</div>

											<div class="col-sm-4 col-lg-4 col-md-4">
												<h4>Checkout more medicines!</h4>
												<hr />
												<a class="btn btn-primary" href="/medicare/show/all/products">More
													Products</a>
											</div>

										</div>

										<div class="row">
											<div class="col-xs-12">
												<h3>Most Purchased Medicines</h3>
												<hr />
											</div>
										</div>
										<div class="row is-table-row">

											<div class="col-sm-4" ng-repeat="product in pCtrl.mpProducts">
												<div class="thumbnail card-layout">
													<img ng-src="/medicare/resources/images/{{product.code}}.jpg" alt="{{product.name}}" class="landingImg">
													<h5>{{product.name}}</h5>
													<hr />
													<div class="caption">
														<h4 class="pull-right">&#8377; {{product.unitPrice}}</h4>
														<p>{{product.description}}</p>
														<a ng-href="/medicare/show/{{product.id}}/product"
															class="btn btn-primary pull-right">View</a>
													</div>
												</div>
											</div>

											<div class="col-sm-4 col-lg-4 col-md-4">
												<h4>Checkout more medicines!</h4>
												<hr />
												<a class="btn btn-primary" href="/medicare/show/all/products">More
													Products</a>
											</div>

										</div>

									</div>

								</div>

